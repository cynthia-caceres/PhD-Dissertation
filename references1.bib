   journal = {EUROPEAN ECONOMIC REVIEW},
   keywords = {Social norms; Formal and informal LTC; Daughters; Sons},
   month = {11},
   publisher = {ELSEVIER},
   title = {Caregivers in the family: Daughters, sons and social norms},
   volume = {130},
   year = {2020}
}
@article{YahmedBombarda2020,
   abstract = {This paper studies how import liberalization affects formal employment
across gender. The theory offers a mechanism to explain how male and
