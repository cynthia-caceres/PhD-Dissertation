@article{Bargain2021,
   abstract = {Informal work is traditionally large in Russia and has further increased
in the recent years. We explore the implications of this shift in terms
of wage dynamics. Our characterization is based on the estimation of
informal pay gaps at the mean and along the wage distribution, relying
on the Russian Longitudinal Monitoring Survey for 2003-2017. Our
