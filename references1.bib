   issue = {3},
   journal = {TRANSFORMATIONS IN BUSINESS \& ECONOMICS},
   keywords = {informal employment; formal employment; hourly wages; marginal treatment
effect; policy-relevant treatment effect},
   publisher = {VILNIUS UNIV},
   title = {WHO BENEFITS MOST FROM INFORMAL EMPLOYMENT? EVIDENCE FROM CHINA},
   volume = {22},
   year = {2023}
}
@article{Neog2023,
   abstract = {The study examines the extent of gender- and caste-based discrimination
